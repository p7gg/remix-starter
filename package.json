{
	"name": "remix-starter",
	"private": true,
	"sideEffects": false,
	"type": "module",
	"scripts": {
		"build": "remix vite:build",
		"dev:local": "dotenv -v DB_ENV=local remix vite:dev",
		"dev:live": "remix vite:dev",
		"start": "remix-serve ./build/server/index.js",
		"preview": "dotenv -v DB_ENV=local remix-serve --env-file=.env ./build/server/index.js",
		"typecheck": "tsc",
		"db:generate:local": "dotenv -v DB_ENV=local drizzle-kit generate:sqlite",
		"db:generate:live": "drizzle-kit generate:sqlite",
		"db:push:local": "dotenv -v DB_ENV=local drizzle-kit push:sqlite",
		"db:push:live": "drizzle-kit push:sqlite",
		"studio:live": "drizzle-kit studio",
		"studio:local": "dotenv -v DB_ENV=local drizzle-kit studio",
		"fmt:check": "biome format .",
		"fmt:fix": "biome format --write .",
		"lint:check": "biome lint .",
		"lint:fix": "biome lint --apply .",
		"check": "biome check .",
		"fix": "biome check --apply .",
		"fix:unsafe": "biome check --apply-unsafe ."
	},
	"dependencies": {
		"@conform-to/react": "^1.0.6",
		"@conform-to/zod": "^1.0.6",
		"@libsql/client": "^0.6.0",
		"@mobily/ts-belt": "^3.13.1",
		"@remix-run/node": "^2.8.1",
		"@remix-run/react": "^2.8.1",
		"@remix-run/serve": "^2.8.1",
		"drizzle-orm": "^0.30.7",
		"isbot": "^4.1.0",
		"nanoid": "^5.0.7",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"remix-themes": "^1.3.1",
		"tiny-invariant": "^1.3.3",
		"zod": "^3.22.4"
	},
	"devDependencies": {
		"@biomejs/biome": "1.6.4",
		"@egoist/tailwindcss-icons": "^1.7.4",
		"@iconify-json/lucide": "^1.1.180",
		"@remix-run/dev": "^2.8.1",
		"@types/react": "^18.2.20",
		"@types/react-dom": "^18.2.7",
		"autoprefixer": "^10.4.19",
		"dotenv-cli": "^7.4.1",
		"drizzle-kit": "^0.20.14",
		"postcss": "^8.4.38",
		"tailwindcss": "^3.4.3",
		"typescript": "^5.1.6",
		"vite": "^5.1.0",
		"vite-tsconfig-paths": "^4.2.1"
	},
	"engines": {
		"node": ">=18.0.0"
	}
}
